<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    app:umanoPanelHeight="68dp"
    app:umanoShadowHeight="4dp"
    tools:context=".Cetalks">
<FrameLayout
    android:id="@+id/content_cetalks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#FF000000"
        android:id="@+id/radiobg"
        android:scaleType="centerCrop"/>


    <RelativeLayout
        android:id="@+id/main_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:text="#LIVE"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:alpha="0.3"
                android:scaleType="centerCrop"
                android:src="@drawable/cetalksblur" />

            <techub.cet.cetalks.CircularSeekBar
                android:id="@+id/circularSeekBar"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:padding="30dp"
                app:circle_fill="@color/black_overlay"
                app:circle_progress_color="@color/whiteshade"
                app:circle_stroke_width="4dp"
                app:lock_enabled="true"
                app:pointer_color="@color/whiteshade"
                app:pointer_halo_color="@color/whiteshade"
                app:pointer_halo_color_ontouch="@color/whiteshade"
                app:pointer_radius="3dp" />


            <ImageView
                android:id="@+id/songimage"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/cetalks"
                android:layout_centerInParent="true"
                />





        <com.ohoussein.playpause.PlayPauseView
                android:id="@+id/play_pause_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:clickable="true"
                android:foreground="?android:selectableItemBackground"
                app:fill_color="@color/whiteshade"
                app:pause_bg="#00000000"
                app:play_bg="#00000000"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/marque_scrolling_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/circularSeekBar"
                android:ellipsize="marquee"
                android:lines="2"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="16dp"
                android:scrollHorizontally="true"
                android:text="College of Engineering, Trivandrum"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

</FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/dragView">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/uparrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/uparrow"
                android:layout_centerInParent="true"/>



        </RelativeLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1">

            <TableRow>
                <Button
                    android:layout_height="10dp"
                    android:layout_width="10dp"
                    android:id="@+id/about"
                    android:layout_gravity="center"
                    android:background="@drawable/about" />

                <Button
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:id="@+id/button3"
                    android:layout_gravity="center"
                    android:background="@drawable/facebook"/>
            </TableRow>

            <TableRow>
                <Button
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:id="@+id/button2"
                    android:layout_gravity="center"
                    android:background="@drawable/twitter"/>

                <Button
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:id="@+id/button4"
                    android:layout_gravity="center"
                    android:background="@drawable/share" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>

